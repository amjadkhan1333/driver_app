<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lbl_dig_promocode"
            style="@style/txt_msg_tab"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/login_btn"
            android:gravity="center"
            android:paddingLeft="10sp"
            android:text="@string/dialog_promocode"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/img_promocode"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:padding="5sp"
            android:src="@drawable/dialog_promocode" />

        <EditText
            android:id="@+id/edt_dig_promocode"
            style="@style/edt_dig_promocode_tab"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/img_promocode"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/edittext_promocode"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="textCapCharacters"
            android:padding="10sp"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/black_cursor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_dig_promocode"
            style="@style/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_weight="1"
            android:background="@color/color_toolbar"
            android:text="@string/btn_submit"

            />
    </LinearLayout>


</LinearLayout>

