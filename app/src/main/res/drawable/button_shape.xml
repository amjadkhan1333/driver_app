<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/btn_bg_color" />
            <stroke
                android:width="1dp"
                android:color="@color/btn_bg_color" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/btn_bg_color"
                android:endColor="@color/btn_bg_color"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="@color/btn_bg_color" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
</selector>